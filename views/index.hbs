<!DOCTYPE html>
<html lang='pt-br'>

<head>
  <meta charset='UTF-8' />
  <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  <title>Weather Humidity Checker App</title>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
      color: #333;
      background-color: #f5f5f7;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      height: 100vh;
    }

    .container {
      width: 80%;
      margin: 0 auto;
      padding: 1.25rem;
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    h1 {
      color: #777;
      font-size: 2.5rem;
      margin-bottom: 2.875rem;
      text-align: center;
    }

    form {
      background: #ffffff;
      border-radius: 1rem;
      box-shadow: 0 0 0.625rem rgba(0, 0, 0, 0.1);
      padding: 2.875rem 3.875rem;
      width: 31.25rem;
      max-width: 100%;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      gap: 2rem;
      box-sizing: border-box;
    }

    .form-group {
      display: flex;
      flex-direction: column;
      gap: 1.25rem;
    }

    .input {
      display: flex;
      flex-direction: column;
      gap: 0.625rem;
    }

    label {
      font-size: 1rem;
      color: #333;
      display: block;
    }

    input {
      padding: 0.625rem;
      font-size: 1rem;
      border-radius: 0.375rem;
      border: 1px solid #777;
    }

    button {
      background-color: #777;
      color: #ffffff;
      border: none;
      padding: 0.625rem 1.25rem;
      border-radius: 0.375rem;
      font-size: 1rem;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #e57e87;
    }

    .response-wrapper {
      font-size: 1rem;
      color: #5a5a5a;
      background-color: rgba(87, 87, 87, 0.1);
      justify-content: center;
      align-items: center;
      display: none;
      min-width: 31.25rem;
      max-width: 100%;
      border-radius: 1rem;
      margin: 1.25rem auto 0;
    }

    #response {
      padding: 1.25rem;
      text-align: center;
    }

    footer {
      background-color: #ffffff;
      border-top: 1px solid #ddd;
      height: 2.5rem;
      padding: 1.25rem;
      text-align: center;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 0.625rem;
    }

    footer p {
      border-right: 1px solid #7777777c;
      padding-right: 0.625rem;
    }

    footer p,
    footer a {
      margin: 0;
      font-size: 0.875rem;
      color: #777;
      text-decoration: none;
      height: fit-content;
    }

    footer a:hover {
      color: #e57e87;
    }

    footer .social-icons i {
      margin: 0 0.625rem;
      font-size: 1.5rem;
      color: #777;
    }

    footer .social-icons i:hover {
      color: #e57e87;
    }
  </style>
</head>

<body>
  <div class='container'>
    <h1>Verificador de Umidade do Ar</h1>

    <form id='humidityForm' action='/humidity-verifier/check-humidity' method='POST'>
      <div class="form-group">
        <div class="input">
          <label for='lat'>Insira a latitude:</label>
          <input type='number' id='lat' name='lat' />
        </div>

        <div class="input">
          <label for='lon'>Insira a longitude:</label>
          <input type='number' id='lon' name='lon' />
        </div>

        <div class="input">
          <label for='humidity'>Insira a umidade do ar no momento:</label>
          <input type='number' id='humidity' name='humidity' required />
        </div>
      </div>
      <button type='submit'>Verificar a umidade</button>
    </form>

    <div class='response-wrapper'>
      <p id='response' />
    </div>
  </div>

  <footer>
    <p>Feito por <a href="https://www.linkedin.com/in/anna-luiza-camargo-fistarol/" target="_blank">Anna Luiza
        Fistarol</a></p>
    <div class="social-icons">
      <a href="https://www.linkedin.com/in/anna-luiza-camargo-fistarol/" target="_blank"><i
          class="fab fa-linkedin-in"></i></a>
      <a href="https://github.com/annaluizacamargo" target="_blank"><i class="fab fa-github"></i></a>
      <a href="mailto:luizafistarol@gmail.com"><i class="fa fa-envelope"></i></a>
    </div>
  </footer>

  <script>
    document.getElementById('humidityForm').addEventListener('submit', async function (event) {
      event.preventDefault();

      const form = event.target;
      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());

      try {
        const response = await fetch(form.action, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(data)
        });

        const responseElement = document.getElementById('response');

        if (!response.ok) {
          responseElement.innerText = 'Erro ao verificar a umidade, por favor verifique os dados inseridos e tente novamente!';
          responseElement.parentElement.style.display = 'flex';
          return;
        }

        const result = await response.text();
        responseElement.innerText = result;
        responseElement.parentElement.style.display = 'flex';

      } catch (error) {
        console.error('Erro:', error);
        document.getElementById('response').innerText = 'Erro ao verificar a umidade';
      }
    });
  </script>
</body>

</html>